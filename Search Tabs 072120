<script>
  $(() => {
    $('#mobile-search-select').change((e) => {
      var id = $(e.target).val();
      $('.mobile-search-form:not(#' + id + ')').addClass('hidden');
      $('#' + id).removeClass('hidden');
    });
  });
</script>
